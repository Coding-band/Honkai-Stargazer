<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_char_info_card"
        android:foreground="@drawable/bg_card_kwang"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/area_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_skill_round"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/tv_nightday_tint"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="館區1"
            android:textColor="@color/tv_daynight_tint"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/area_rank"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="S"
                android:textColor="@color/theme_color_base"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/area_lock"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/round_lock_24"
                app:tint="@color/grey" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>