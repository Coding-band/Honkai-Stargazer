<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/tv_daynight_tint_semi"
    android:orientation="vertical"
    android:padding="12dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="可獲得振興值"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preview_expect_exp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3000"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/preview_area_lvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="展區等級 8"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/preview_area_rank"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/preview_upgrade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:background="@drawable/bg_char_info_card"
                    android:gravity="center"
                    android:text="升級"
                    android:textColor="@color/tv_daynight_tint"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@drawable/bg_dot_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/tv_nightday_tint"
                    android:gravity="center|left"
                    android:text="遊覽時間"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp"
                    app:drawableLeftCompat="@drawable/round_access_time_filled_16" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/preview_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="100/200"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/preview_time_pb"
                style="@style/Widget.Seekbar.FULL.GREY"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="5000"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="300"
                android:secondaryProgress="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/tv_nightday_tint"
                    android:gravity="center|left"
                    android:text="推廣價值"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp"
                    app:drawableLeftCompat="@drawable/round_insert_drive_file_16" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/preview_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="100/100"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/preview_value_pb"
                style="@style/Widget.Seekbar.FULL.GREY"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="300"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/tv_nightday_tint"
                    android:gravity="center|left"
                    android:text="吸引人流"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp"
                    app:drawableLeftCompat="@drawable/ic_person_16" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/preview_person_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="150/300"
                    android:textColor="@color/tv_nightday_tint"
                    android:textSize="14sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/preview_person_pb"
                style="@style/Widget.Seekbar.FULL.GREY"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="300"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_rect_half"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/preview_assistant_1"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="48dp"
                    android:minWidth="36dp"
                    app:srcCompat="@drawable/pela_icon" />

                <ImageView
                    android:id="@+id/preview_assistant_2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="48dp"
                    android:minWidth="36dp"
                    app:srcCompat="@drawable/bronya_icon" />

                <ImageView
                    android:id="@+id/preview_assistant_3"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="48dp"
                    android:minWidth="36dp"
                    app:srcCompat="@drawable/silver_wolf_icon" />

                <ImageView
                    android:id="@+id/preview_assistant_4"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="48dp"
                    android:minWidth="36dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/asta_icon" />

            </LinearLayout>

            <TextView
                android:id="@+id/preview_assistant_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTint="@color/theme_color_base"
                android:gravity="center"
                android:text="更換"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/round_rotate_left_24" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>