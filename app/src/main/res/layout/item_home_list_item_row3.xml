<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/home_list_item_bg"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_ico2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/serval_fade" />

                <TextView
                    android:id="@+id/item_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_rare_1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="1"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/item_ico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/tingyun_fade" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/view_bottom_grad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_item_gradient">

                        <com.willy.ratingbar.ScaleRatingBar
                            android:id="@+id/item_rare"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|center"
                            android:gravity="center"
                            app:srb_clearRatingEnabled="true"
                            app:srb_clickable="true"
                            app:srb_drawableEmpty="@drawable/ic_rare_star"
                            app:srb_drawableFilled="@drawable/ic_rare_star"
                            app:srb_isIndicator="false"
                            app:srb_minimumStars="1"
                            app:srb_numStars="5"
                            app:srb_rating="5"
                            app:srb_scrollable="true"
                            app:srb_starPadding="1dp"
                            app:srb_stepSize="0.5" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_top_grad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_item_gradient_rotate"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/item_path_ico"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/path_the_nihility"
                        app:tint="@color/ic_daynight_tint" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/item_element"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/element_lightning" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_beta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/fg_item_beta" />

                <LinearLayout
                    android:id="@+id/item_sub_ll"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom|center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/item_sub_item1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|center"
                        app:srcCompat="@drawable/champion_of_streetwise_boxing_1" />

                    <ImageView
                        android:id="@+id/item_sub_item2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|center"
                        app:srcCompat="@drawable/champion_of_streetwise_boxing_1" />

                    <ImageView
                        android:id="@+id/item_sub_item3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|center"
                        app:srcCompat="@drawable/champion_of_streetwise_boxing_1" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeMinTextSize="12sp"
                    android:gravity="center"
                    android:minLines="2"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="2O48"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/item_material_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:text="Hi there, I'm using Honkai Stargazer!"
                    android:textColor="@color/tv_daynight_tint"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/item_material_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:maxWidth="64dp"
                        android:maxHeight="64dp"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:srcCompat="@drawable/material_extinguished_core" />

                    <ImageView
                        android:id="@+id/item_material_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:maxWidth="64dp"
                        android:maxHeight="64dp"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:srcCompat="@drawable/material_extinguished_core" />

                    <ImageView
                        android:id="@+id/item_material_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:maxWidth="64dp"
                        android:maxHeight="64dp"
                        android:minWidth="32dp"
                        android:minHeight="32dp"
                        app:srcCompat="@drawable/material_extinguished_core" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_intro_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:text="Hi there, I'm using Honkai Stargazer!"
                    android:textColor="@color/tv_daynight_tint"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/item_normal_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/item_hp_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/ic_hp"
                                        app:tint="@color/ic_daynight_tint" />

                                    <TextView
                                        android:id="@+id/item_hp_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="1241"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/item_def_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/ic_def"
                                        app:tint="@color/ic_daynight_tint" />

                                    <TextView
                                        android:id="@+id/item_def_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="606"
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/item_atk_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/ic_atk"
                                        app:tint="@color/ic_daynight_tint" />

                                    <TextView
                                        android:id="@+id/item_atk_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="601"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/item_speed_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        app:srcCompat="@drawable/ic_speed"
                                        app:tint="@color/ic_daynight_tint" />

                                    <TextView
                                        android:id="@+id/item_speed_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center|left"
                                        android:text="95"
                                        android:textSize="10sp" />
                                </LinearLayout>
                            </TableRow>

                        </TableLayout>

                        <View
                            android:id="@+id/view"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/split_line_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_path_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Nihility"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_relic_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/item_2pc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2pc :"
                            android:textColor="@color/home_list_item_title"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/item_2pc_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reduces DMG taken by 8%"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />

                        <TextView
                            android:id="@+id/item_4pc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4pc :"
                            android:textColor="@color/home_list_item_title"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/item_4pc_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="At the beginning of the turn, if the wearer's HP is equal to or less than 50%, restores HP equal to 8% of their Max HP and regenerates 5 Energy."
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_kwang_alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/bg_card_kwang" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>