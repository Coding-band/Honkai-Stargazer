<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HonkaiStargazer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/filter_btn_themed</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/hsr_font</item>
        <item name="android:textColor">@color/tv_daynight_tint</item>
        <item name="switchStyle">@style/Widget.Switch</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Material3.NavigationView">
        <item name="fontFamily">@font/hsr_font</item>
    </style>
    <style name="Widget.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="fontFamily">@font/hsr_font</item>
    </style>
    <style name="Widget.TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hsr_font</item>
    </style>
    <style name="Widget.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:track">@drawable/app_switch_track</item>
        <item name="android:thumb">@drawable/app_switch_thumb</item>
        <item name="background">@null</item>
        <item name="android:background">@null</item>

    </style>
    <style name="Widget.Seekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/bg_seekbar_line</item>
        <item name="android:thumbTint">@color/filter_btn_themed</item>
    </style>
    <style name="Widget.Seekbar.Discrete" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressDrawable">@drawable/bg_seekbar_line</item>
        <item name="android:thumbTint">@color/filter_btn_themed</item>
    </style>
    <style name="Widget.Chip.TextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hsr_font</item>
    </style>
    <style name="Widget.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/tv_daynight_tint_semi</item>
        <item name="fontFamily">@font/hsr_font</item>
    </style>
    <style name="Widget.ChipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipSpacingVertical">0dp</item>
    </style>



    <style name="PageDialogStyle_P">
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="FilterDialogStyle_F">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalDialogAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>
    <style name="RadioDialogStyle_R">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/fadeDialogAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>

    <style name="normalDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/normal_navi_down_enter</item>
        <item name="android:windowExitAnimation">@anim/normal_navi_down_exit</item>
    </style>

    <style name="fadeDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>