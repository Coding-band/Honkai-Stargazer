<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="72dp" android:height="40dp"/>
            <solid android:color="@color/select_list_bg"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <layer-list
            android:paddingMode="stack"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <item
                android:gravity="end|fill_vertical"
                android:width="20dp" android:height="20dp" android:end="9dp">
                <ripple xmlns:android="http://schemas.android.com/apk/res/android"
                    android:color="@color/tv_daynight_tint"
                    android:radius="15dp" />
            </item>

            <item
                android:id="@+id/arrow_up"
                android:drawable="@drawable/round_arrow_drop_up_24"
                android:gravity="end|center_vertical"
                android:width="30dp"
                android:height="30dp"
                android:end="4dp" />
        </layer-list>
    </item>
</layer-list>

